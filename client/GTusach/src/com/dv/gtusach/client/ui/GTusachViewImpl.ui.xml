<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel width="100%" height="100%" styleName="background">
		<g:FlowPanel width="100%" height="100%">
			
			<g:HorizontalPanel width="100%">
				<g:Image url="images/logo.png"/>
				<g:VerticalPanel height="64px">
			  	<g:Label text="TU SACH KIEM HIEP" styleName="title"/>
				  <g:Anchor href="/v2/index.html" styleName="siteLinks">Navigate to the new web site version</g:Anchor>
 					<g:FlowPanel ui:field="siteLinks" styleName="siteLinks">
					</g:FlowPanel>
				</g:VerticalPanel>
			</g:HorizontalPanel>
					
			<g:FlowPanel>
				<g:DisclosurePanel ui:field="profilePanel" width="" height="" styleName="disclosureHeader">
					<g:header>Profile</g:header>
					<g:FlexTable ui:field="profileTable" width="" height="" styleName="profileTable" />
				</g:DisclosurePanel>
				<g:DisclosurePanel ui:field="createPanel" width="70%" styleName="disclosureHeader">
					<g:header>Create New Book</g:header>
					<g:FlexTable ui:field="createTable" width="99%" height="150px" styleName="createTable" />
				</g:DisclosurePanel>
				<g:DisclosurePanel ui:field="scriptPanel" width="99%" styleName="disclosureHeader" height="">
					<g:header>Parser Scripts</g:header>
					<g:HorizontalPanel>
					<g:VerticalPanel width="200px" height="150px" styleName="scriptControlPanel">
						<g:ListBox ui:field="chkScriptList" width="100%"/>
						<g:Label text="Domain Name"/>
						<g:TextBox ui:field="textDomainName" width="100%"/>
						<g:HorizontalPanel>
							<g:Button ui:field="newButton">New</g:Button>
							<g:Button ui:field="saveEditButton" addStyleNames="margin-left">Edit</g:Button>
							<g:Button ui:field="deleteCancelButton" addStyleNames="margin-left">Delete</g:Button>
						</g:HorizontalPanel>							
					</g:VerticalPanel>					
					<g:ScrollPanel ui:field="scriptScrollPanel" width="99%">
						<g:TextArea ui:field="scriptTextArea" height="200px" characterWidth="100" styleName="scriptTextArea"/>
					</g:ScrollPanel>											
					</g:HorizontalPanel>
				</g:DisclosurePanel>
				
			</g:FlowPanel>
			<g:FlowPanel width="100%" styleName="bottomPanel">
				<g:Label ui:field="messageLabel" text="" styleName="margin-left"/>
				<g:HorizontalPanel>
					<g:CheckBox ui:field="showBookDetails" text="Show Details"/>				
					<g:CheckBox ui:field="showOnlyMyBooks" text="Show Only My Books"/>				
				</g:HorizontalPanel>
				<g:ScrollPanel ui:field="bookListPanel" width="99%" styleName="floatLeft">
					<g:FlexTable ui:field="bookListTable" height="100%" width="100%" styleName="borderPanel" />
				</g:ScrollPanel>
			</g:FlowPanel>			
		</g:FlowPanel>

	</g:HTMLPanel>
</ui:UiBinder> 